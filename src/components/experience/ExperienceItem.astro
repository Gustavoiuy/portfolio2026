---
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div
  class="experience-item relative mx-12 pb-12 grid md:grid-cols-5 md:gap-10 md:space-x-4"
>
  <div
    class="experience-line absolute left-[-35px] block h-full w-0 border-l-2 border-black/20 dark:border-white/15 transition-all duration-1000 ease-out origin-top scale-y-0"
  >
  </div>

  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-st -left-[41px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <p class="text-xl font-bold text-st">{title}</p>
      <h4 class="font-semibold text-base text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="experience-description relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3 opacity-0 translate-x-20 transition-all duration-700 ease-out"
  >
    {description}
    {
      link && (
        <a
          href={link}
          class="group flex gap-2 w-fit items-center transition-colors duration-300 hover:text-st"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`Ir al certificado de practicas preprofecionales emitido por ${title}`}
        >
          Saber m√°s{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right transition-transform duration-300 group-hover:translate-x-1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </a>
      )
    }
  </div>
</div>

<script>
  const initExperienceObserver = () => {
    const experienceItems = document.querySelectorAll(".experience-item");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const description = entry.target.querySelector(
              ".experience-description"
            );
            const line = entry.target.querySelector(".experience-line");

            if (description) {
              description.classList.remove("opacity-0", "translate-x-20");
              description.classList.add("opacity-100", "translate-x-0");
            }

            if (line) {
              line.classList.remove("scale-y-0");
              line.classList.add("scale-y-100");
            }
          }
        });
      },
      {
        root: null,
        threshold: 0.8,
        rootMargin: "0px",
      }
    );

    experienceItems.forEach((item) => {
      observer.observe(item);
    });
  };

  document.addEventListener("astro:page-load", initExperienceObserver);
</script>
