---
interface Props {
  color: string;
  label: string;
  borderColor: string;
}

const { color, label, borderColor } = Astro.props;
---

<article
  class="container flex gap-2 items-center py-2 px-5 rounded-xl bg-[#1e1e1e] relative"
>
  <div class="p-2 rounded-xl" style={{ backgroundColor: color }}>
    <slot />
  </div>
  <p>{label}</p>
</article>

<style define:vars={{ borderColor }}>
  @property --angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
  .container::after,
  .container::before {
    box-sizing: content-box;
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: conic-gradient(
      from var(--angle),
      transparent 70%,
      var(--borderColor)
    );
    z-index: -2;
    top: 50%;
    left: 50%;
    translate: -50% -50%;
    border-radius: 12px;
    padding: 2px;
    animation: 4s spin linear infinite;
    opacity: 0;
    transition: opacity 500ms ease;
  }
  .container::before {
    filter: blur(1.5em);
    opacity: 0.5;
    visibility: hidden;
  }
  @keyframes spin {
    from {
      --angle: 0deg;
    }
    to {
      --angle: 360deg;
    }
  }
  .container:hover::after,
  .container:hover::before {
    opacity: 1;
  }
  .container:hover::before {
    visibility: visible;
  }
</style>
